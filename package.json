{
  "name": "decentraland-experiments",
  "version": "0.0.0-development",
  "description": "Experiment Tracking Tool (A/B Testing)",
  "main": "dist",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/segment-analytics": "0.0.32",
    "eventemitter3": "^4.0.0",
    "jest": "^24.9.0",
    "semantic-release": "^17.2.3",
    "ts-jest": "^24.0.2",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc --project tsconfig.json",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branch": "master",
    "ci": false
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/__mock__/**"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/experiments.git"
  },
  "bugs": {
    "url": "https://github.com/decentraland/experiments/issues"
  },
  "homepage": "https://github.com/decentraland/experiments#readme"
}
